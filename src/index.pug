//---SCHEDULE---
//- event = {title, subtitle?, location}
mixin schedule-row(time, event)
  .row.no-gutters
    .col-3.col-md-2
      .time!= time
    .col-9.col-md-10.col-lg-8
      .event(class=(event.type ? "event-" + event.type : ""))
        .title!= event.title
        .subtitle!= event.subtitle || ""
        .location!= event.location || "&nbsp;"

mixin schedule-row-2(time, event1, event2)
  .row.no-gutters
    .col-3.col-md-2
      .time!= time
    .col-9.col-md-10.col-lg-8.d-flex.flex-wrap
      .event(class=(event1.type ? "event-" + event1.type : ""))
        .title!= event1.title
        .subtitle!= event1.subtitle || ""
        .location!= event1.location || "&nbsp;"
      .event(class=(event2.type ? "event-" + event2.type : ""))
        .title!= event2.title
        .subtitle!= event2.subtitle || ""
        .location!= event2.location || "&nbsp;"

mixin schedule-div(time, title)
  .row.no-gutters
    .col-3.col-md-2
      .time.schedule-div-time!= time
    .col-9.col-md-10.col-lg-8
      .schedule-div-hr
        span.schedule-div-text!= title

mixin schedule-day(title, isFirst)
  .row.no-gutters
    .col-12
      .schedule-day-title(id=(isFirst ? "schedule-day-title-first" : ""))!= title


